{% assign countdown_days = settings.countdown_days %}
{% assign countdown_hours = settings.countdown_hours %}
{% assign countdown_minutes = settings.countdown_minutes %}
{% assign countdown_seconds = settings.countdown_seconds %}

<div
  id="announcement-bar"
  style="background-color: red; height: 40px; display: flex; align-items: center; justify-content: space-between; padding: 0 15px; color: white; position: relative;"
>
  <div id="countdown" style="font-size: 16px;"></div>
  <button
    id="close-btn"
    style="background: none; border: none; color: white; cursor: pointer; font-size: 20px; position: absolute; right: 10px;"
  >
    &times;
  </button>
</div>

<script>
  const countdownDate = new Date().getTime() +
    ({{ countdown_days }} * 86400 * 1000 + {{ countdown_hours }} * 3600 * 1000 + {{ countdown_minutes }} * 60 * 1000 + {{ countdown_seconds }} * 1000);

  const countdownFunction = setInterval(function() {
    const now = new Date().getTime();
    const distance = countdownDate - now;

    const days = Math.floor(distance / (1000 * 60 * 60 * 24));
    const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    const seconds = Math.floor((distance % (1000 * 60)) / 1000);

    document.getElementById("countdown").innerHTML =
      days + "d " + hours + "h " + minutes + "m " + seconds + "s ";

    if (distance < 0) {
      clearInterval(countdownFunction);
      document.getElementById("countdown").innerHTML = "Hết thời gian!";
    }
  }, 1000);

  document.getElementById("close-btn").onclick = function() {
    document.getElementById("announcement-bar").style.display = "none";
  }
</script>
